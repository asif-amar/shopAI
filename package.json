{
  "name": "shopai-extension",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant Chrome extension",
  "type": "module",
  "scripts": {
    "dev": "webpack --config webpack.config.cjs --mode=development --watch",
    "build": "webpack --config webpack.prod.cjs --mode=production",
    "build:dev": "webpack --config webpack.config.cjs --mode=development",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "analyze": "webpack --config webpack.analyze.cjs --mode=production",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build complete! Load the dist folder in Chrome extensions.'"
  },
  "dependencies": {
    "chrome-types": "^0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "sharp": "^0.34.3",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "vite": "^4.4.0",
    "vitest": "^0.34.0",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "shopping",
    "typescript",
    "manifest-v3",
    "webpack"
  ],
  "author": "shopAI Team",
  "license": "MIT"
}
